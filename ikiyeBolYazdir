#include <cstdlib>
#include <iostream>
#include <vector>

using namespace std;

void yazdir(int dizi[],int l)
{
     int i,j;
     for(i=l/2-1;i>=0;i--)
     {
         cout<<dizi[i]<<",";
     }
     cout<<endl;
     
     for(i=l/2;i<l;i++)
     {
         cout<<dizi[i]<<",";
     }
}

int main(int argc, char *argv[])
{
    int dizi[]={4,-3,2,1,6,-1,-2,4};
    yazdir(dizi,8);
    system("PAUSE");
    return EXIT_SUCCESS;
}
